generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  password      String?
  username      String    @unique
  steamId       String?   @unique
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  reviews       Review[]
  reviewVotes   ReviewVote[]
  gameLists     GameList[]
  userTags      UserTag[]
  badges        Badge[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Game {
  id              String    @id @default(cuid())
  igdbId          Int?      @unique
  title           String
  slug            String    @unique
  description     String?
  coverUrl        String?
  genre           String?
  releaseDate     DateTime?
  currentVersion  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  reviews         Review[]
  performanceData PerformanceReport[]
  accessibilityVotes AccessibilityVote[]
  gameTags        GameTag[]
  gameLists       GameList[]
}

model Review {
  id            String   @id @default(cuid())
  content       String
  rating        Int      // 1-10
  greedScore    Int?     // 1-10 monetization rating
  playtimeHours Float?   // Time to beat
  gameVersion   String?  // For patch-aware system
  progressPoint String?  // For spoiler-safe threads
  isOutdated    Boolean  @default(false)
  isVerifiedOwner Boolean @default(false)
  upvotes       Int      @default(0)
  userId        String
  gameId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game          Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  votes         ReviewVote[]
  @@unique([userId, gameId])
}

model ReviewVote {
  id        String   @id @default(cuid())
  userId    String
  reviewId  String
  value     Int      // 1 = upvote, -1 = downvote
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@unique([userId, reviewId])
}

model PerformanceReport {
  id         String   @id @default(cuid())
  gameId     String
  userId     String?
  gpu        String
  cpu        String
  resolution String
  avgFps     Int
  settings   String
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model AccessibilityVote {
  id              String  @id @default(cuid())
  gameId          String
  userId          String?
  colorblindMode  Boolean @default(false)
  subtitles       Boolean @default(false)
  remappableKeys  Boolean @default(false)
  difficultyModes Boolean @default(false)
  screenReader    Boolean @default(false)
  onHandedMode    Boolean @default(false)
  game            Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
}

model GameList {
  id       String   @id @default(cuid())
  userId   String
  gameId   String
  listType String   // "planned", "playing", "dropped", "completed"
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game     Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId, gameId])
}

model GameTag {
  id     String @id @default(cuid())
  gameId String
  tag    String
  count  Int    @default(1)
  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  @@unique([gameId, tag])
}

model UserTag {
  id     String @id @default(cuid())
  userId String
  gameId String
  tag    String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@unique([userId, gameId, tag])
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "hidden_gem_hunter", "verified_owner", "taste_buddy", "prolific_reviewer"
  meta      String?  // JSON for additional data
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  awardedAt DateTime @default(now())
  @@unique([userId, type])
}
